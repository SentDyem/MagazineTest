@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Покупка</title>
</head>
<body>
    <div>
        <div class="name">
            <div class="jumbotron">
                <h3>Форма оформления покупки</h3>
            </div>
        </div>
        <div class="data">
            <form method="post" action="">
                <input type="hidden" value="@ViewBag.BookId" name="BookId" />
                <table class = "form">
                    <tr>
                        <td><p>Введите свое имя </p></td>
                        <td><input type="text" name="Person" /> </td>
                    </tr>
                    <tr>
                        <td><p>Введите адрес :</p></td>
                        <td>
                            <input type="text" name="Address" />
                        </td>
                    </tr>
                    <tr><td><input class="btn-primary btn-block" type="submit" value="Отправить" /> </td><td></td></tr>
                </table>
            </form>
        </div>
        
    </div>
</body>
</html>